

<!DOCTYPE html>
<html>
  <head>
    <title>GOAL CHEER</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Bootstrap core CSS -->
    <link href="http://blackrockdigital.github.io/startbootstrap-grayscale/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="http://blackrockdigital.github.io/startbootstrap-grayscale/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="theme.css" rel="stylesheet">


    <!-- Navigation -->
    <% if user_signed_in? %>
     <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
       <div class="container">
         <a style=font-size:28px class="navbar-brand js-scroll-trigger" href="#page-top">Goal Cheer</a>
         <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
           <i class="fas fa-bars"></i>
         </button>
         <div class="collapse navbar-collapse" id="navbarResponsive" style="font-size:14px">
           <ul class="navbar-nav ml-auto">
             <li class="nav-item">
               <a class="nav-link js-scroll-trigger" <%= link_to 'All Goals', root_path %></a>
               </li>
             <li class="nav-item">
               <a class="nav-link js-scroll-trigger" <%= link_to 'My Goals', user_posts_path(current_user.id) %></a>
             </li>
             <li class="nav-item">
               <a class="nav-link js-scroll-trigger" <%= link_to 'Create a New Goal', new_user_post_path(current_user.id) %></a>
             </li>
             <li class="nav-item">
               <a class="nav-link js-scroll-trigger" <%= link_to current_user.email.capitalize , user_posts_path(current_user.id) %></a>
             </li>
             <li class="nav-item">
               <a class="nav-link js-scroll-trigger" <%= link_to "Logout", destroy_user_session_path, method: :delete%></a>
             </li>
             <% end %>
           </ul>
         </div>
       </div>
     </nav>
